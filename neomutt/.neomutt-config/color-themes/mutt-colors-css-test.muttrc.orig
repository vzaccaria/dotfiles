# Have a look here: http://www.guckes.net/Setup/mutt.color.body
# for a bunch of regular expressions

color normal        333333     dddddd
color search        dddddd     orangered


color index         444444     dddddd      '.*'
color tree          999999     dddddd

color index         777777            dddddd "~A"    # all messages
color index         bright-bf0020     dddddd "~F"    # flagged  

color index         bright-444444     dddddd "~s\"((s|S)ezione|(l|L)aure(a|e)|ccs|CCS|CONVOCAZIONE|Convocazione|Giunta)\""
color index         bright-74003f     dddddd "~f\"Chiara Tenconi\""
color index         000000            dddddd "~f\"(Tanca|Garzotto|Matera|Ajovalasit|Ciancia|Maria Chiara Molteni|Bertoni|Melzani|Zaccaria|Di Nitto|Masseroli|Staff Beep)\""
color index         bright-bf0020     dddddd "~s\"((u|U)rgent|URGENT|(u|U)rgenza)\""  
color index         bright-bf0020     dddddd "~b\"((u|U)rgent|URGENT|(u|U)rgenza)\""

color index         444444 ffebc5     "~f\"(annalisa corti)\""  
color index         444444 ffebc5     "~s\"(bonifico)\""  

color index         bright-008bec     dddddd "~N"    # new messages  
color index         bright-0b8800     dddddd "~Q"    # replied

color index_tag		  orangered  dddddd      "attachment" 


color hdrdefault    888888 dddddd
color header        bright-000000     dddddd      "^(From)"
color header        bright-000000     dddddd      "^(Subject)"

color quoted        666666     dddddd
color signature     666666     dddddd

color body          bright-0b8800     dddddd "[;:][-o][)/(|]"    # emoticons
color body          bright-0b8800     dddddd "[;:][-][D]"    # emoticons
color body          bright-0b8800     dddddd "[;:][)(|]"         # emoticons

color sidebar_divider 999999 dddddd
color sidebar_new     bright-008bec     dddddd      
color sidebar_flagged     bright-bf0020     dddddd      
color sidebar_highlight     dddddd      666666

color   attachment         999999 dddddd
color   attach_headers     008bec dddddd        "Autoview"
color   attach_headers     999999    dddddd        "^\\[--"
color   attach_headers     999999    dddddd        "--]$"

