set realname="Vittorio Zaccaria"
set index_format="%4C %Z %{%b %d %R} %-15.15L (%?l?%4l&%4c?) %s"
set sidebar_visible
set sidebar_format="%B%?F? [%F]?%* %?N?%N/?%S"
set mail_check_stats

# m a i l b o x e s
set mbox_type=Maildir
set folder=~/.mail/vittorio.zaccaria@gmail.com
set spoolfile=+/archive
mailboxes = +/archive +/inbox

set nm_default_uri = "notmuch:///home/admin/.mail"
set virtual_spoolfile=yes
virtual-mailboxes "poli/tcps" "notmuch://?query=(final NEAR thesis NEAR studio) OR ajovalasit OR ciancia"
virtual-mailboxes "poli/tirocini" "notmuch://?query=tirocinio OR stage"
virtual-mailboxes "poli/pd" "notmuch://?query=subject:(lista NEAR pd)"
virtual-mailboxes "research/secpat" "notmuch://?query=securitypattern"

# s o r t i n g
set sort=threads
set sort_browser=reverse-date
set sort_aux=reverse-last-date-received

# c o l o r s 
source ./.neomutt-config/color-themes/mutt-colors-solarized-dark-256.muttrc

# b i n d i n g s
source ./.neomutt-config/bindings.mutt

